<Page x:Class="Nea_Prototype.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nea_Prototype.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <ListBox x:Name="lstKeybindingsList">
           <ListBox.ItemTemplate>
               <DataTemplate>
                   <Grid>
                       <Grid.ColumnDefinitions>
                           <ColumnDefinition/>
                           <ColumnDefinition/>
                       </Grid.ColumnDefinitions>
                       <Label Content="{Binding BindingName}"/>
                       <Button Click="ButtonBase_OnClick" Content="{Binding KeyName}" Grid.Column="1"/>
                   </Grid>
                   
               </DataTemplate>
           </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
