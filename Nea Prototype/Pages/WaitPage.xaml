<Page x:Class="Nea_Prototype.Pages.WaitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nea_Prototype.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WaitPage">

    <Grid>
        <StackPanel>
            <TextBlock>
                Waiting for a second player to connect.
                <LineBreak/>
                Use the port 26332
            </TextBlock>
            <TextBlock>If you are on the same network (same WiFi etc.) then try to join using these IPs (they should look similar to the other client):</TextBlock>
            <TextBlock x:Name="txtLocalIps"/>
        </StackPanel>
    </Grid>
</Page>
