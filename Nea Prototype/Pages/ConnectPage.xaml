<Page x:Class="Nea_Prototype.Pages.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nea_Prototype.Pages"
      xmlns:controls="clr-namespace:Nea_Prototype.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnectPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Server Connect-->
        <Grid Grid.Column="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <controls:RegexTextBox x:Name="txtIP" Width="120" Watermark="IP Address"/>
            <controls:RegexTextBox x:Name="txtPort" Grid.Column="1" Width="80" Watermark="Port"/>
            <Button x:Name="btnConnect" Grid.Row="1" Grid.ColumnSpan="2" Click="BtnConnect_OnClick">Connect</Button>
        </Grid>
    </Grid>
</Page>
