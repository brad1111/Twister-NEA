<Page x:Class="Nea_Prototype.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nea_Prototype"
      xmlns:grid="clr-namespace:Nea_Prototype.Grid"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePage" KeyDown="Page_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <!--ScoreInformation-->
        </Grid>
        <Grid Grid.Row="1">
            <!--PlayArea-->
            <Canvas x:Name="cvsPlayArea"  Height="400" Width="400" Background="Black" RenderTransformOrigin="0.5,0.5">
                <Canvas.RenderTransform>
                    <RotateTransform/>
                </Canvas.RenderTransform>
                
                <!--Where griditems are manually placed-->

            </Canvas>
        </Grid>
        <Grid Grid.Row="2">
            <!--Other interactions with the game-->
        </Grid>
    </Grid>
</Page>
